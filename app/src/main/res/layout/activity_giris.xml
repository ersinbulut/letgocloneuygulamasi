<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_red_light"
    tools:context=".GirisActivity">

    <ImageView
        android:id="@+id/resim1"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="144dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="147dp"
        app:srcCompat="@drawable/logo1"
        tools:layout_editor_absoluteX="145dp"
        tools:layout_editor_absoluteY="67dp" />

    <EditText
        android:id="@+id/etName"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="101dp"
        android:layout_marginTop="255dp"
        android:layout_marginEnd="110dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_action_user"
        android:ems="10"
        android:fontFamily="@font/anton"
        android:hint="Username"
        android:inputType="textPersonName"
        android:textSize="16dp"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="389dp" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="324dp"
        android:layout_marginEnd="111dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_action_pass"
        android:ems="10"
        android:fontFamily="@font/anton"
        android:hint="Password"
        android:inputType="textPassword"
        android:textSize="16dp"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="471dp" />

    <Button
        android:id="@+id/btnGiris"
        android:layout_width="198dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="99dp"
        android:layout_marginEnd="114dp"
        android:layout_marginBottom="223dp"
        android:background="@drawable/rounded_buton"

        android:drawableLeft="@drawable/true_check"
        android:fontFamily="@font/anton"
        android:onClick="btnGiris"
        android:text="Giriş Yap" />

    <Button
        android:id="@+id/btnKaydol"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="99dp"
        android:layout_marginEnd="114dp"
        android:layout_marginBottom="162dp"
        android:background="@drawable/rounded_buton1"

        android:drawableLeft="@android:drawable/ic_menu_add"
        android:fontFamily="@font/anton"
        android:onClick="btnKayit"
        android:text="Kayıt Ol" />

    <ImageView
        android:id="@+id/resim3"
        android:layout_width="41dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="258dp"
        android:layout_marginBottom="52dp"
        app:srcCompat="@drawable/facebook" />

    <ImageView
        android:id="@+id/resim2"
        android:layout_width="41dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="196dp"
        android:layout_marginBottom="52dp"
        app:srcCompat="@drawable/instagram" />

    <ImageView
        android:id="@+id/resim3"
        android:layout_width="41dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="134dp"
        android:layout_marginBottom="52dp"
        app:srcCompat="@drawable/twitter" />
</RelativeLayout>